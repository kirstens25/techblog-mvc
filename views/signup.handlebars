<div class="signUpCard">
    <h2>Create a New Profile With TechBlog</h2>
    <hr>

    <form class="signup-form">
        {{!-- user_name --}}
        <div class="form-group">
            <label for="user_name-signup">username:</label>
            <input class="form-input" type="text" id="user_name-signup" />
        </div>
        {{!-- email --}}
        <div class="form-group">
            <label class="email-signup"for="email-signup">email:</label>
            <input class="form-input" type="text" id="email-signup" />
        </div>
        {{!-- password --}}
        <div class="form-group">
            <label for="password-signup">password:</label>
            <input class="form-input" type="password" id="password-signup" />
        </div>

        <div class="form-group">
            <button class="button" type="submit">signup</button>
        </div>
    </form>
</div>

