{{#if logged_in }}
<!-- Loop over each object in the projects array -->
{{#each posts as |Post| }}
<div class="postCard">
  <div class="postTitle">
    <a class="postbox" href="/post/{{Post.id}}"><h1>{{Post.title}}</h1></a>
     <p class="postbox creator">posted by {{Post.user.user_name}} on {{format_date Post.createdAt}}</p>
  </div>  
  <div class="postBody">
    <p class="postContent">
      {{Post.content}}
    </p>
  </div>
</div>
{{/each}}
{{else}}
<div class=''>
    <h2 class='title pb-4'; style="width:auto";>Welcome To TechBlog. Login to see our exclusive content!</h2></div>
        {{/if}}